{
  "compilerOptions": {
    "target": "ES6", // 可选 ES5 / ES6
    "module": "ESNext", // Webpack 会处理模块
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
